extends layout

block content
    div.blog-masthead
        div.container
            nav.blog-nav
                a.blog-nav-item(href='/#/') Home
                a.blog-nav-item(href='/#/git') Git
                a.blog-nav-item(href='/#/tends') Trends
                a.blog-nav-item(href='/#/bookmarks') Bookmarks
                a.blog-nav-item(href='/#/api/users') users Api
